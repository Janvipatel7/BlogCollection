<%- include('./partials/cStart.ejs') %>
    <section class="py-5 bg-light">
        <div class="container">

            <div class="text-center mb-5">
                <h2 class="fw-bold">Featured Blogs</h2>
                <p class="text-muted">Editor's Picks</p>
            </div>

            <div class="row g-4">

                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="/assets2/images/Future of Web Development-bg.jpg" class="card-img-top" alt="blog">
                        <div class="card-body">
                            <span class="badge bg-primary mb-2">Technology</span>
                            <h5 class="fw-bold">Future of Web Development</h5>
                            <p class="text-muted">
                                Discover how AI, React, and Node.js are shaping the web.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="/assets2/images/ui-ux-bg.avif" class="card-img-top" alt="blog">
                        <div class="card-body">
                            <span class="badge bg-success mb-2">Design</span>
                            <h5 class="fw-bold">UI/UX Design Tips</h5>
                            <p class="text-muted">
                                Improve usability with simple UI/UX principles.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="/assets2/images/full-stack-bg.jpg" class="card-img-top" alt="blog">
                        <div class="card-body">
                            <span class="badge bg-warning mb-2">Career</span>
                            <h5 class="fw-bold">Full Stack Developer Roadmap</h5>
                            <p class="text-muted">
                                Step-by-step guide to become a full stack developer.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <section class="py-5 px-4">
        <div class="container">

            <div class="text-center mb-5">
                <h2 class="fw-bold">Latest Blogs</h2>
                <p class="text-muted">Fresh content from our writers</p>
            </div>

            <div class="row g-4 p-3">
                <% blogs.forEach(blog=> { %>
                    <div class="col-sm-6 col-lg-4 pb-3">
                        <div class="card blog-card shadow-sm border-0 pb-3">

                            <img src="/<%= blog.file %>" class="card-img-top" alt="blog image">

                            <div class="card-body">
                                <span class="badge badge-brand mb-2">
                                    <%= blog.tags %>
                                </span>

                                <h5 class="card-title fw-bold">
                                    <%= blog.name %>
                                </h5>

                                <p class="card-text text-secondary small blog-desc collapsed">
                                    <%= blog.desc %>
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0">
                                <a class="btn w-100 border-brand text-brand read-toggle blog-btn">
                                    Read More <i class="fa-solid fa-arrow-down ms-1"></i>
                                </a>
                            </div>

                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>

    <footer class="footer-brand pt-5 text-light">
        <div class="container">
            <div class="row">

                <div class="col-md-4 mb-4">
                    <h5 class="fw-bold mb-3">BlogCollection</h5>
                    <p class="footer-text">
                        Discover & share thoughtfully written blogs on technology,
                        coding trends, creative design, and developer insights.
                    </p>

                    <div class="d-flex gap-3 mt-3">
                        <a href="#" class="text-black fs-5 fw-bold"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-black fs-5 fw-bold"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-black fs-5 fw-bold"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-black fs-5 fw-bold"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="/">Home</a></li>
                        <li><a href="/">Blogs</a></li>
                        <li><a href="/">About</a></li>
                        <li><a href="/">Contact</a></li>
                    </ul>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="fw-bold mb-3">Categories</h6>
                    <ul class="list-unstyled footer-links">
                        <li><a href="#">Technology</a></li>
                        <li><a href="#">Web Development</a></li>
                        <li><a href="#">Design</a></li>
                        <li><a href="#">Career</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="fw-bold mb-3">Subscribe</h6>
                    <p class="footer-text">
                        Get latest blogs directly in your inbox.
                    </p>

                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control footer-input" placeholder="Email address">
                            <button class="btn btn-light fw-semibold">Subscribe</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

        <div class="footer-bottom text-center mt-4 py-3">
            <p class="mb-0">
                Â© <%= new Date().getFullYear() %> BlogCollection. All rights reserved.
            </p>
        </div>

    </footer>


    <%- include('./partials/cEnd.ejs') %>