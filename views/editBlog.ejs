<%- include('./partials/start.ejs') %>

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="blog-wrapper">
          <h2 class="page-title">Add New Blog</h2>

          <div class="blog-form">
            <form action="/admin/edit-blog/<%= editBlog._id %>" method="post" enctype="multipart/form-data">

              <div class="form-group">
                <label>Blog Title</label>
                <input type="text" name="name" value="<%= editBlog.name %>">
              </div>

              <div class="form-group">
                <label  for="file" >Cover Image</label>
                <input type="file" id="file" name="file" accept="image/*">
                <img src="/<%= editBlog.file %>" alt="<%= editBlog.name %>" width="150px">
              </div>

              <div class="form-group">
                <label>Description</label>
                <textarea name="desc" rows="5" ><%= editBlog.desc %></textarea>
              </div>

              <div class="form-group">
                <label>Tags</label>
                <input type="text" name="tags" value="<%= editBlog.tags %>">
              </div>

              <button type="submit" class="btn-primary">
                Update Blog
              </button>

            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

  <%- include('./partials/end.ejs') %>