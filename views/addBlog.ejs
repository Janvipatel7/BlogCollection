<%- include('./partials/start.ejs') %>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="blog-wrapper">
        <h2 class="page-title">Add New Blog</h2>

        <div class="blog-form">
          <form action="/admin/add-blog" method="post" enctype="multipart/form-data">

            <div class="form-group">
              <label class="form-inputs">Blog Title</label>
              <input type="text" name="name" placeholder="Enter blog title">
            </div>

            <div class="form-group">
              <label class="form-inputs">Cover Image</label>
              <input type="file" name="file" accept="image/*">
            </div>

            <div class="form-group">
              <label class="form-inputs">Description</label>
              <textarea name="desc" rows="5" placeholder="Write blog description..."></textarea>
            </div>

            <div class="form-group">
              <label class="form-inputs">Tags</label>
              <input type="text" name="tags" placeholder="e.g. tech, javascript, ai">
            </div>

            <button type="submit" class="btn-primary">
              Publish Blog
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/end.ejs') %>
